<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">
  <variable name="dty" value="${date:format=dd.MM.yyyy}"/>
  <variable name="dth" value="${date:format=HH}"/>
  <targets async="true">
    <target name="file"
               encoding="utf-8"
               xsi:type="File"
               layout="${newline}${longdate} ${callsite} ${message} ${exception:format:type:tostring,message:maxInnerExceptionLevel=3:innerFormat=Message,StackTrace}"
               fileName="${basedir}/logs/${dty}/${dth}.log"
               archiveFileName="${basedir}/logs/${dty}/${dth}.{#####}.log"
               archiveAboveSize="100485760"
               archiveNumbering="Sequence"
               concurrentWrites="true"
               maxArchiveFiles="10"/>
    
  </targets>

  <rules>
    
    <logger name="*" minlevel="Trace" writeTo="file" />
    
  </rules>
</nlog>
